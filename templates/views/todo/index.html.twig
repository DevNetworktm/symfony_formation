{% extends 'layouts/layout.admin.html.twig' %}

{% block title %} Todo List | Admin {% endblock %}
{% block titleContent %} Todo List {% endblock %}

{% block content %}
    <a href="{{ path('app_todo_reset') }}">Reset</a>
    <ol class="list-group">
        {% for name, content in app.session.get('todos') %}
            <li style="display: flex; align-items: center" class="list-group-item">
                {{ name }} : {{ content }}
                <a href="{{ path('app_todo_del', {name: name}) }}" style="margin-left: auto">Supprimer</a>
            </li>
        {% endfor %}
    </ol>
{% endblock %}